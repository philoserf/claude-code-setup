{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Glob",
      "Grep",
      "Write(*.go)",
      "Write(*.md)",
      "Write(*.json, !settings.json, !.mcp.json)",
      "Write(*.yaml)",
      "Write(*.yml)",
      "Write(*.ts)",
      "Write(*.tsx)",
      "Write(*.js)",
      "Write(*.jsx)",
      "Write(*.py)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(dot:*)",
      "Bash(go:*)",
      "Bash(brew:*)",
      "Bash(bun:*)",
      "Bash(bunx:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Write(go.sum)",
      "Write(package-lock.json)",
      "Bash(sudo:*)",
      "Bash(rm:*)"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/log-git-commands.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate-bash-commands.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate-config.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-idle.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load-session-context.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
